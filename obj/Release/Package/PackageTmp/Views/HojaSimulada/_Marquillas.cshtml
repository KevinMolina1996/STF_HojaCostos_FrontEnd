@model AppWebHojaCosto.Models.HOJA_COSTO_SIMULADA

<div>
    <fieldset style="border-width:2px; border-style:groove; padding:10px;">
        <legend style="padding: 2px; width:auto;">MARQUILLAS, ETIQUETAS, EMPAQUES</legend>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <div style="text-align:right; text-decoration:underline;"><a href="#" id="addMarquillas">+ Adicionar</a></div>
                    <table id="tablaMarquillas" class="table table-sm table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.LabelFor(model => model.TBL_SIM_ETIQ_MAR_EMP.FirstOrDefault().SimEmeNombreS, new { @class = "control-label" })</th>
                                <th>@Html.LabelFor(model => model.TBL_SIM_ETIQ_MAR_EMP.FirstOrDefault().SimEmeCtsxMtD, new { @class = "control-label" })</th>
                                <th>@Html.LabelFor(model => model.TBL_SIM_ETIQ_MAR_EMP.FirstOrDefault().SimEmeConF, new { @class = "control-label" })</th>
                                <th>@Html.LabelFor(model => model.TBL_SIM_ETIQ_MAR_EMP.FirstOrDefault().SimEmeTotalD, new { @class = "control-label" })</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TBL_SIM_ETIQ_MAR_EMP != null && Model.TBL_SIM_ETIQ_MAR_EMP.Count > 0)
                            {
                                int j = 0;
                                foreach (var i in Model.TBL_SIM_ETIQ_MAR_EMP)
                                {
                                    <tr style="border:1px solid black">
                                        @Html.HiddenFor(a => a.TBL_SIM_ETIQ_MAR_EMP[j].SimEmeCodigoN, new { @class = "SimEmeCodigoN" })
                                        @Html.HiddenFor(a => a.TBL_SIM_ETIQ_MAR_EMP[j].SimHcCodigoN)
                                        @Html.HiddenFor(a => a.TBL_SIM_ETIQ_MAR_EMP[j].Borrado, new { @class = "Borrado" })
                                        <td>@Html.TextBoxFor(a => a.TBL_SIM_ETIQ_MAR_EMP[j].SimEmeNombreS, new { @class = "form-control input-sm" })</td>
                                        <td>@Html.TextBoxFor(a => a.TBL_SIM_ETIQ_MAR_EMP[j].SimEmeCtsxMtD, new { @class = "form-control input-sm SimEmeCtsxMtD solonumeros", data_nombre = "SimEmeCtsxMtD" })</td>
                                        <td>@Html.TextBoxFor(a => a.TBL_SIM_ETIQ_MAR_EMP[j].SimEmeConF, new { @class = "form-control input-sm SimEmeConF solonumeros", data_nombre = "SimEmeConF" })</td>
                                        <td>@Html.TextBoxFor(a => a.TBL_SIM_ETIQ_MAR_EMP[j].SimEmeTotalD, new { @class = "form-control input-sm", @readonly = "readonly", data_nombre = "SimEmeTotalD" })</td>
                                        <td>
                                            @if (j > 0)
                                            {
                                                <a href="#" class="remove">Eliminar</a>
                                            }
                                        </td>
                                    </tr>
                                    j++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </fieldset>
</div>