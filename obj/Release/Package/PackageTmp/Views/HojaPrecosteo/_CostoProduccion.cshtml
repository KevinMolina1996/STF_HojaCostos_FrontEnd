@model AppWebHojaCosto.Models.HOJA_COSTO_PRECOSTEO

<div>
    <fieldset style="border-width:2px; border-style:groove; padding:10px;">
        <legend style="padding: 2px; width:auto;">Resumen General Costo Produccion</legend>
        <div class="row">
            <div class="col-md-8">
                @Html.HiddenFor(x => x.TBL_PRE_RES_GEN_COS_PRD.PreRpCodigoN)
                @Html.LabelFor(model => model.TBL_PRE_RES_GEN_COS_PRD.PreRpCostoMaterialesD, new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                <div class="input-group mb-1">
                    @Html.TextBoxFor(model => model.TBL_PRE_RES_GEN_COS_PRD.PreRpCostoMaterialesD, new { name = "PreRpCostoMaterialesD", id = "PreRpCostoMaterialesD", @class = "form-control input-sm solonumeros" })
                    <div class="input-group-append">
                        <span class="input-group-text">COP</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                @Html.LabelFor(model => model.TBL_PRE_RES_GEN_COS_PRD.PreRpCostoConversionD, new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                <div class="input-group mb-1">
                    @Html.TextBoxFor(model => model.TBL_PRE_RES_GEN_COS_PRD.PreRpCostoConversionD, new { name = "PreRpCostoConversionD", id = "PreRpCostoConversionD", @class = "form-control input-sm solonumeros" })
                    <div class="input-group-append">
                        <span class="input-group-text">COP</span>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</div>
<div class="inferior_modulos">
    <div class="row">
        <div class="col-md-8">
            @Html.LabelFor(model => model.TBL_PRE_HOJA_COSTO_PN.PreHcTotalCosPrdD, new { @class = "control-label" })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.TBL_PRE_HOJA_COSTO_PN.PreHcTotalCosPrdD, new { name = "PreHcTotalCosPrdD", id = "PreHcTotalCosPrdD", @class = "form-control input-sm input_totales", @readonly = "readonly" })
        </div>
    </div>
</div>