@model List<AppWebHojaCosto.Models.TBL_REF_SINC>

@{
    ViewBag.Title = "Parametrizar";
}

@section Scripts {
<script src="~/Scripts/JS/js-sincronizacion.js"></script>
}

<div>
    <fieldset style="border-width:2px; border-style:groove; padding:10px;">
        <legend style="padding: 2px; width:auto;">Consulta</legend>
        <div class="row">
            <div class="col-md-4">
                @Html.LabelFor(model => model.FirstOrDefault().RsTipoInventarioS, new { @class = "control-label" })
                <select id="Inventario" class="form-control input-sm">
                    <option value="" selected>Seleccione...</option>
                    <option value="Precosteo">Precosteo</option>
                    <option value="Producido">Producido</option>
                    <option value="NoProducido">No Producido</option>
                </select>
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.FirstOrDefault().RsReferenciaS, new { @class = "control-label" })
                <input type="text" class="form-control input-sm" id="Referencia" />
            </div>
            <div class="col-md-4">
                <div style="height:33px; width:10px;">
                </div>
                <button type="button" id="Sinc" class="btn btn-sm btn-dark">
                    <span class="fa fa-retweet"></span> Sincronizar Referencia
                </button>
            </div>
        </div>
    </fieldset>
</div>

<br />

