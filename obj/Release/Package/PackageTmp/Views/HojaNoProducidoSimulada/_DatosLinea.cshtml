@model AppWebHojaCosto.Models.TBL_SIM_HOJA_COSTO_PNP

<fieldset style="border-width:2px; border-style:groove; padding:10px;">
    <legend style="padding: 2px; width:auto;">Datos Linea</legend>
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(m => m.SimPnpProveedorS, new { @class = "control-label" })
        </div>
        <div class="col-md-6 mb-1">
            @Html.TextBoxFor(m => m.SimPnpProveedorS, new { @class = "form-control input-sm", @readonly = "readonly" })
            @Html.ValidationMessageFor(m => m.SimPnpProveedorS, null, new { @class = "campos_requeridos" })
        </div>
    </div>
