@model AppWebHojaCosto.Models.HOJA_COSTO_SIMULADA

<div>
    <fieldset style="border-width:2px; border-style:groove; padding:10px;">
        <legend style="padding: 2px; width:auto;">INSUMOS Y ACCESORIOS</legend>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <div style="text-align:right; text-decoration:underline;"><a href="#" id="addInsumos">+ Adicionar</a></div>
                    <table id="tablaInsumos" class="table table-sm table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.LabelFor(model => model.TBL_SIM_INS_ACC.FirstOrDefault().SimIaNombreS, new { @class = "control-label" })</th>
                                <th>@Html.LabelFor(model => model.TBL_SIM_INS_ACC.FirstOrDefault().SimIaColorS, new { @class = "control-label" })</th>
                                <th>@Html.LabelFor(model => model.TBL_SIM_INS_ACC.FirstOrDefault().SimIaCtsxMtD, new { @class = "control-label" })</th>
                                <th>@Html.LabelFor(model => model.TBL_SIM_INS_ACC.FirstOrDefault().SimIaConF, new { @class = "control-label" })</th>
                                <th>@Html.LabelFor(model => model.TBL_SIM_INS_ACC.FirstOrDefault().SimIaTotalD, new { @class = "control-label" })</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TBL_SIM_INS_ACC != null && Model.TBL_SIM_INS_ACC.Count > 0)
                            {
                                int j = 0;
                                foreach (var i in Model.TBL_SIM_INS_ACC)
                                {
                                    <tr style="border:1px solid black">
                                        @Html.HiddenFor(a => a.TBL_SIM_INS_ACC[j].SimIaCodigoN, new { @class = "SimIaCodigoN" })
                                        @Html.HiddenFor(a => a.TBL_SIM_INS_ACC[j].SimHcCodigoN)
                                        @Html.HiddenFor(a => a.TBL_SIM_INS_ACC[j].Borrado, new { @class = "Borrado" })
                                        <td>@Html.TextBoxFor(a => a.TBL_SIM_INS_ACC[j].SimIaNombreS, new { @class = "form-control input-sm" })</td>
                                        <td>@Html.TextBoxFor(a => a.TBL_SIM_INS_ACC[j].SimIaColorS, new { @class = "form-control input-sm" })</td>
                                        <td>@Html.TextBoxFor(a => a.TBL_SIM_INS_ACC[j].SimIaCtsxMtD, new { @class = "form-control input-sm SimIaCtsxMtD solonumeros", data_nombre = "SimIaCtsxMtD" })</td>
                                        <td>@Html.TextBoxFor(a => a.TBL_SIM_INS_ACC[j].SimIaConF, new { @class = "form-control input-sm SimIaConF solonumeros", data_nombre = "SimIaConF" })</td>
                                        <td>@Html.TextBoxFor(a => a.TBL_SIM_INS_ACC[j].SimIaTotalD, new { @class = "form-control input-sm", @readonly = "readonly", data_nombre = "SimIaTotalD" })</td>
                                        <td>
                                            @if (j > 0)
                                            {
                                                <a href="#" class="remove">Eliminar</a>
                                            }
                                        </td>
                                    </tr>
                                    j++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </fieldset>
</div>