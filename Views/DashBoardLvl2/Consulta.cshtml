@model AppWebHojaCosto.Models.DASHBOARDLVL2

@{
    ViewBag.Title = "DashBoard Lvl 2";
}

@section Scripts{
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
    <script src="~/Scripts/JS/js-dashboard-2.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js"></script>
}

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Producido</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Precosteo</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">No Producido</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div id="panelProducido">
            <br />
            @using (Ajax.BeginForm("ConsultarProducido", "DashBoardLvl2", new AjaxOptions
            {
                HttpMethod = "POST",
                OnSuccess = "successProducido"
                //OnComplete = "exportImage"
            }))
            {
                @Html.ValidationSummary(true)
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-2 offset-md-1">
                            @Html.LabelFor(m => m.Marca, new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.Marca, new SelectList(Model.Marcas, "Value", "Text"), new { @id = "Marca", @class = "form-control", @required = "required" })
                        </div>
                        <div class="col-md-2">
                            @Html.LabelFor(m => m.Coleccion, new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.Coleccion, new SelectList(Model.Colecciones, "Value", "Text"), new { @id = "Coleccion", @class = "form-control", @required = "required" })
                        </div>
                        <div class="col-md-2">
                            @Html.LabelFor(m => m.Linea, new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.Linea, new SelectList(Model.Lineas, "Value", "Text"), new { @id = "Linea", @class = "form-control", @required = "required" })
                        </div>
                        <div class="col-md-2">
                            @Html.LabelFor(m => m.Sublinea, new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.Sublinea, new SelectList(Model.Sublineas, "Value", "Text"), new { @id = "Sublinea", @class = "form-control", @required = "required" })
                        </div>
                        <div class="col-md-2">
                            <div style="height:33px; width:10px;"></div>
                            <button type="submit" id="btnConsultar" class="btn btn-sm btn-dark"><span class="fa fa-search"></span> Consultar</button>
                            <button type="button" id="btnLimpiarProducido" class="btn btn-sm btn-dark" onclick="return false;"><span class="fa fa-undo"></span> Limpiar</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <br />
        <div id="producido">
            @{Html.RenderPartial("_ListaProducido", Model);}
        </div>
    </div>
